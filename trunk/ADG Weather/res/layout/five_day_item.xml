
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:background="@color/LightBlue">

        <ImageView
            android:id="@+id/fiveDayImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="7dp"
            android:src="@drawable/sunny64" />

        <TextView
            android:id="@+id/dateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fiveDayImage"
            android:layout_toRightOf="@+id/fiveDayImage"
            android:text="date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/valueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateTextView"
            android:layout_toRightOf="@+id/fiveDayImage"
            android:paddingTop="5dp"
            android:text="value"
            android:textColor="@color/Black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tempText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/valueText"
            android:layout_alignBottom="@+id/valueText"
            android:layout_toRightOf="@+id/valueText"
            android:paddingRight="5dp"
            android:text="temp"
            android:textColor="@color/Black"
            android:textSize="18sp" />

    </RelativeLayout>
